<!DOCTYPE html>
<html>
<head>
  <title>Portray Advertising - The World's Smartest Food Trays</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<!-- Assets -->
<%= stylesheet_link_tag 'main.css', :media => 'screen, projection' %>
<%= stylesheet_link_tag 'bootstrap.css', :media => 'screen, projection' %>
<%= stylesheet_link_tag 'responsive.css', :media => 'screen, projection' %>
<%= stylesheet_link_tag 'style.css', :media => 'screen, projection' %>
<%= stylesheet_link_tag 'camera.css', :media => 'screen, projection' %>
<%= stylesheet_link_tag 'portfolio.css', :media => 'screen, projection' %>
<%= stylesheet_link_tag 'elements.css', :media => 'screen, projection' %>
<%= javascript_include_tag "application" %>
<link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,900,400italic' rel='stylesheet' type='text/css'>			
	<!-- end Assets -->
	
	<%= favicon_link_tag 'portray_p.ico' %>

	<!-- Meta -->

	<meta name="description" content="Portray advertising provides an innovative marketing platform for businesses in food courts and cafeterias. Portray advertising sells advertisements in the interior of modern designed food trays.">

	<!-- end Meta -->

</head>
<body>

		<header>
		<%= render "shared/header" %>
		</header>

		<%= yield %>
	
		<%= render "shared/footer" %>
		
		<script type="text/javascript" src="/assets/jquery.js"></script>
		<script type="text/javascript" src="/assets/bootstrap.js"></script>
		<script type="text/javascript" src="/assets/jquery.easing.1.3.js"></script>
		<script type="text/javascript" src="/assets/camera.js"></script>
		<script type="text/javascript" src="/assets/jquery.ui.totop.js"></script>
		<script type="text/javascript" src="/assets/prettify.js"></script>
		<script type="text/javascript" src="/assets/application.js"></script>
		<script type="text/javascript" src="/assets/jquery.cookie.js"></script>
		<script type="text/javascript" src="/assets/jquery.quicksand.js"></script>
		<script type="text/javascript" src="/assets/jquery.mobile.customized.min.js"></script>
		<script type="text/javascript" src="/assets/accordion.js"></script>
		<script type="text/javascript" src="/assets/tabs.js"></script>
		<script type="text/javascript" src="/assets/nav-small.js"></script>
				<script type="text/javascript" src="/assets/superfish.js"></script>
		<script>
		      $(document).ready(function(){   
		         jQuery('.camera_wrap').camera();
							
						$(function() {
							$(".video ")
							.find("span")
							.hide()
							.end()
							.hover(function() {
								$(this).find("span").stop(true, true).fadeIn();

							}, function() {
								$(this).find("span").stop(true, true).fadeOut();
							});
						});
						
						var ifra;
						$(".video").click(function(){
						if ( ifra ) {
						ifra.appendTo("body");
						ifra = null;
						}  
						$("#overlay_form").fadeIn(500);
						 $("#popi-bg").css({
						"opacity": "0.7"
						}); 
						$("#popi-bg").fadeIn("fast");
						positionPopup();
						});


						$("#close2, #popi-bg").click(function(){

						$("#overlay_form").fadeOut(300);

						$("#popi-bg").fadeOut("fast");
						if ( ifra ) {
						ifra.appendTo("body");
						ifra = null;
						} else {
						ifra = $("#overlay_form").detach();
						}

						});

						function positionPopup(){
						if(!$("#overlay_form").is(':visible')){
						return;
						}
						$("#overlay_form").css({
						left: ($(window).width() - $('#overlay_form').width()) / 2.2,
						top: ($(window).width() - $('#overlay_form').width()) / 3.2,
						position:'absolute'
						});
						}
						$(window).bind('resize',positionPopup);
						
						 $('.dropdown_toggle').click(function(e) {
						  	if ($(this).parent().is('.clicked')) {
						  		$('.dropdown_toggle').removeClass('clicked');
						  		$('.dropdown_menu').fadeOut('fast');
						  	}
						  	else
						  	{
						  		$(this).parent().find('.dropdown_menu').fadeIn('fast', function() {
						  			$(this).addClass('opened');
						  		});

						  		// This stops the click event from bubbling up the DOM tree
						  		e.stopPropagation();
						  	}
						  });

						  $('body').click(function() {
						  	$('.dropdown_menu').fadeOut('fast', function() {
						  		$(this).removeClass('opened');
						  	});
						  });
						
		        });
					
		</script>
			
</body>
</html>