<!DOCTYPE html>
<html>
<head>
  <title>PortrayApp</title>
	<script src="http://code.jquery.com/jquery-1.8.2.min.js"></script>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= stylesheet_link_tag "main", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= csrf_meta_tags %>

	<% content_for :javascript do %>

	$(document).ready ( function(){
	    if (!$('.navigation li a').removeClass('highlight').filter(function() {
	            return window.location.pathname.indexOf(this.href) === 0;
	        }).addClass('highlight').end().filter('.highlight').length) {
	        $('#home').addClass('highlight'); // make the home link active as a default
	    }
	});

	<% end %>

</head>
<body>
	<div id="container">
		<header>
		<%= render "shared/header" %>
		</header>

		<%= yield %>
	
	</div>
	<footer>
		<%= render "shared/footer" %>
	</footer>
	
</body>
</html>
