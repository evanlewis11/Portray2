<!DOCTYPE html>
<html>
<head>
  <title>PortrayApp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= stylesheet_link_tag    "main", :media => "all" %>
  <%= javascript_include_tag "application" %>
	<%= javascript_include_tag "camera" %>
	<%= stylesheet_link_tag "camera.min" %>
	<%= stylesheet_link_tag "jquery.easing.1.3" %>
	<%= stylesheet_link_tag "jquery.min" %>
	<%= stylesheet_link_tag "jquery.mobile.customized.min" %>
  <%= csrf_meta_tags %>
  <%= csrf_meta_tags %>
	<script>
	jQuery('YOUR_TARGET').camera({
		height: '41%',
		pagination: false,
		thumbnails: true	});
	</script>
	
</head>
<body>
	<div id="container">
		<header>
		<%= render "shared/header" %>
		</header>

		<%= yield %>
	
	</div>
	<footer>
		<%= render "shared/footer" %>
	</footer>
</body>
</html>
